<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.glassPanel {
   			background-color: gray;
    		-ms-filter:"alpha(opacity=50)";
    		opacity: 0.50;
		}
		.loadingImage {
			margin-top: 200px;
			width: 50px;
			height: 50px;
		}
		.loadingMessage {
			color: white;
			font-size: larger;	
		}
	</ui:style>
	
	<g:VerticalPanel ui:field="simplePanel" styleName="{style.glassPanel}">
		<g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_TOP">
			<g:Image url="images/loading.gif" styleName="{style.loadingImage}" height="24px" width="24px"/>	
		</g:cell>
		<!-- <g:cell horizontalAlignment="ALIGN_CENTER" styleName="{style.loadingMessage}">
			<g:Label ui:field="message" styleName="{style.loadingMessage}"/>
		</g:cell>	 -->	
	</g:VerticalPanel>	
</ui:UiBinder> 