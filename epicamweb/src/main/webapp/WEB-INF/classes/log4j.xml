<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" threshold="all" debug="false">

   <!-- console appender -->
   <appender name="console" class="org.apache.log4j.ConsoleAppender">     
     <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern" value="%d{dd-MMM-yyyy HH:mm:ss} %-5p %c %x - %m%n" />
     </layout>
 	</appender>
 	
 	<!-- rolling file appender -->
 	<appender name="file" class="org.apache.log4j.RollingFileAppender"> 
    	<param name="file" value="${catalina.home}/logs/epicamweb.log"/>
   		<param name="MaxFileSize" value="100KB"/>
    	<!-- Keep one backup file -->
    	<param name="MaxBackupIndex" value="10"/>
    	<layout class="org.apache.log4j.PatternLayout"> 
      		<param name="ConversionPattern" value="%d{dd-MMM-yyyy HH:mm:ss} %-5p %c %x - %m%n"/> 
    	</layout> 
  	</appender>

 		
 	<!-- specific loggers -->
 	<logger name="org.imogene" additivity="false">
    	<level value="WARN"/>    	
    	<appender-ref ref="file"/>
 	</logger>
  	
 	<logger name="org.imogene.web.server.security" additivity="false">
    	<level value="ERROR"/>    	
    	<appender-ref ref="file"/>
 	</logger>
 	
 	<logger name="org.springframework.security.web" additivity="false">
    	<level value="ERROR"/>    	
    	<appender-ref ref="file"/>
 	</logger>
 	
  	<!-- hibernate mapping logger -->
 	<logger name="org.hibernate.tool.hbm2ddl" additivity="false">
    	<level value="INFO"/>    	
    	<appender-ref ref="file"/>
 	</logger> 
 	
 	<logger name="org.springframework.orm.jpa" additivity="false">
    	<level value="ERROR"/>    	
    	<appender-ref ref="file"/>
 	</logger>
 	
 	<logger name="org.hibernate.validator" additivity="false">
    	<level value="ERROR"/>    	
    	<appender-ref ref="file"/>
 	</logger> 
 	
 	<logger name="org.springframework" additivity="false">
    	<level value="ERROR"/>    	
    	<appender-ref ref="file"/>
 	</logger>	
 	
 	
  	 <!-- default logger -->
 	<root> 
    	<priority value ="ERROR" />     	
    	<appender-ref ref="file" /> 
  	</root>	
  	
</log4j:configuration>