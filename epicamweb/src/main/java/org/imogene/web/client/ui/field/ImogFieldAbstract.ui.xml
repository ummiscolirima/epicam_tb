<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
		.imogene-FieldLayout {
			vertical-align: middle;
			margin-top: 2px;
			margin-bottom: 2px;
		}
		
		.imogene-FieldLabel {
			font-family: Verdana, arial;
			width: 150px;
			margin-right: 10px;
			margin-left: 2px;
			vertical-align: middle;
		}
		
		.imogene-FieldWidget {
			vertical-align: middle;
		}
		
		/*@external .imogene-Button, .imogene-Button .html-face, .imogene-TabBar, .imogene-TabBar .gwt-TabBarFirst, .imogene-TabBar .gwt-TabBarRest, .imogene-TabBar .gwt-TabBarItem, .imogene-TabBar .gwt-TabBarItem-selected, .imogene-TabBar .gwt-TabBarItem-disabled, .imogene-TabBar .gwt-TabBarItem-disabled, .imogene-TabBar .gwt-TabPanel, .imogene-TabBar .gwt-TabPanelBottom;*/
	</ui:style>

	<g:HorizontalPanel ui:field="layout" stylePrimaryName="{style.imogene-FieldLayout}">
		
		<g:cell verticalAlignment="middle">
			<g:Label ui:field="fieldLabel" stylePrimaryName="{style.imogene-FieldLabel}" />
		</g:cell>
		
		<g:cell verticalAlignment="middle">
			<g:HorizontalPanel ui:field="fieldWidget" stylePrimaryName="{style.imogene-FieldWidget}" />
		</g:cell>
		
	</g:HorizontalPanel>

</ui:UiBinder>