<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:imo3="urn:import:org.imogene.web.client.ui.field.group">

	<ui:style>

		.fieldGroup-ListEditor {
			margin-top: 5px;
		}

		.header {
			width: 220px;
			margin-bottom: 5px;
			font-weight: bold;
		}

		.header2 {
			width: 80px;
			margin-bottom: 5px;
			font-weight: bold;
		}

		.selectAll {
			margin-top: 2px;
			margin-bottom: 2px;
		}

		@external .fieldGroup-ListEditor;
	</ui:style>

	<imo3:FieldGroupPanel ui:field="listSection" >
	    <g:HorizontalPanel>
			<g:VerticalPanel>
	
				<g:HorizontalPanel  verticalAlignment="middle" >
				
					<g:cell verticalAlignment="middle" horizontalAlignment="center">
					    <g:Label ui:field="cardEntityLabel" stylePrimaryName="{style.header}"/>
					</g:cell>
					<g:cell verticalAlignment="middle" horizontalAlignment="center">
					    <g:Label ui:field="fieldGroupLabel" stylePrimaryName="{style.header}"/>
					</g:cell>
					<g:cell verticalAlignment="middle" horizontalAlignment="center">
					    <g:VerticalPanel>
					        <g:cell verticalAlignment="middle" horizontalAlignment="center">					    
					    		<g:Label ui:field="readLabel" stylePrimaryName="{style.header2}"/>
					   		</g:cell>
					   		<g:cell verticalAlignment="middle" horizontalAlignment="center">
					   			<g:CheckBox ui:field="readAllCheckBox" stylePrimaryName="{style.selectAll}" />
					   		</g:cell>				        
					    </g:VerticalPanel>					    
					</g:cell>
					<g:cell verticalAlignment="middle" horizontalAlignment="center">
					    <g:VerticalPanel>
					        <g:cell verticalAlignment="middle" horizontalAlignment="center">					    
					    		<g:Label ui:field="writeLabel" stylePrimaryName="{style.header2}"/>
					   		</g:cell>
					   		<g:cell verticalAlignment="middle" horizontalAlignment="center">
					   			<g:CheckBox ui:field="writeAllCheckBox" stylePrimaryName="{style.selectAll}" />
					   		</g:cell>				        
					    </g:VerticalPanel>					    
					</g:cell>
					<g:cell verticalAlignment="middle" horizontalAlignment="center">
					    <g:VerticalPanel>
					        <g:cell verticalAlignment="middle" horizontalAlignment="center">					    
					    		<g:Label ui:field="exportLabel" stylePrimaryName="{style.header2}"/>
					   		</g:cell>
					   		<g:cell verticalAlignment="middle" horizontalAlignment="center">
					   			<g:CheckBox ui:field="exportAllCheckBox" stylePrimaryName="{style.selectAll}" />
					   		</g:cell>				        
					    </g:VerticalPanel>					    
					</g:cell>

				</g:HorizontalPanel>	    
			    
				<g:VerticalPanel ui:field="listContainer" />
				
			</g:VerticalPanel>
			
		</g:HorizontalPanel>
	</imo3:FieldGroupPanel>

</ui:UiBinder> 




