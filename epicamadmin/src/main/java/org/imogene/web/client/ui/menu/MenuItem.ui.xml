<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style type='org.imogene.web.client.ui.menu.MenuItem.MenuItemStyle'>
	
			.imogene-MenuItem {
				width: 100%;
				margin-bottom: 3px;
				padding-right: 2px;
				padding-left: 2px;
				padding-top: 6px;
				padding-bottom: 6px;
				cursor: pointer;
			}
			
			.imogeneMenuItemOver {
				background-color: #eeeeee;
			}
			
			.imogene-MenuItemSeparator {
				width: 80%;
				border-bottom: 1px solid #777777;
				margin-bottom: 3px;
				margin-top: 3px;
				padding-right: 5px;
			}
			
			.imogene-MenuItemLink {
				width: 90%;
				cursor: pointer;
				padding-left: 2px;
			}
			
			@external .imogene-MenuItem, .imogeneMenuItemOver, .imogene-MenuItemSeparator;
		</ui:style>

	<g:SimplePanel ui:field="layout" stylePrimaryName="{style.imogene-MenuItem}">
		<g:Label ui:field="link" stylePrimaryName="{style.imogene-MenuItemLink}" />
	</g:SimplePanel>

</ui:UiBinder> 