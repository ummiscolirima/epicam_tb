<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style src="../../css/ImogCss.css">
		
		.PopupPanel {
			/*min-width: 700px;*/
			-webkit-box-shadow: 0 2px 2px rgba(0, 0, 0, 0.2);
			-moz-box-shadow: 0 2px 2px rgba(0, 0, 0, 0.2);
			box-shadow: 0 2px 2px rgba(0, 0, 0, 0.2);
			-webkit-transition: opacity .218s;
			-moz-transition: opacity .218s;
			-ms-transition: opacity .218s;
			-o-transition: opacity .218s;
			transition: opacity .218s;
			background: PageBackground;
			border: 1px solid #CCC;
			border: 1px solid rgba(0, 0, 0, .2);
			cursor: default;
			/*font-size: 12px;*/
			margin: 0;
			outline: none;
			padding: 10px 10px 10px 10px;
			position: absolute;
			overflow: auto;
			z-index: 7;
			/*color: TextColor;*/
			-webkit-border-radius: 2px;
			-moz-border-radius: 2px;
			border-radius: 2px;
			text-align: center;
		}

		.Caption {
			text-align: right;
			height: 5px;
		}
	
		@external .Caption;
	</ui:style>

	<g:DialogBox ui:field="popup" stylePrimaryName="{style.PopupPanel}" >
		<g:VerticalPanel ui:field="mainPanel" width="100%" horizontalAlignment="center" verticalAlignment="middle"/>
	</g:DialogBox>


</ui:UiBinder>