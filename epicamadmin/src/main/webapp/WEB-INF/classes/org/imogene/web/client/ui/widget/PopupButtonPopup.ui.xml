<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style src="../../css/ImogCss.css">
		
		.PopupPanel {
			min-width: 70px;
			-webkit-box-shadow: 0 2px 2px rgba(0, 0, 0, 0.2);
			-moz-box-shadow: 0 2px 2px rgba(0, 0, 0, 0.2);
			box-shadow: 0 2px 2px rgba(0, 0, 0, 0.2);
			-webkit-transition: opacity .218s;
			-moz-transition: opacity .218s;
			-ms-transition: opacity .218s;
			-o-transition: opacity .218s;
			transition: opacity .218s;
			background: white;
			border: 1px solid #CCC;
			border: 1px solid rgba(0, 0, 0, .2);
			cursor: default;
			font-size: 12px;
			margin: 0;
			outline: none;
			padding: 6px 6px 6px 6px;
			position: absolute;
			overflow: auto;
			z-index: 10;
			color: TextColor;
		}
		
		.PopupPanel-content {
			color: TextColor;
			font-size: 12px;
			/*background-color: PanelBackground;*/
		}
		
		/*@external .PopupPanel-Button-Search, .PopupPanel-Button-Search .html-face;*/
	</ui:style>

	<g:PopupPanel ui:field="popup" stylePrimaryName="{style.PopupPanel}">
		<g:VerticalPanel ui:field="mainPanel" width="100%"/>

	</g:PopupPanel>


</ui:UiBinder>